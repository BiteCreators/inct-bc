{
  "name": "inctagram",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n host,admin \"pnpm --filter ./apps/host run dev\" \"pnpm --filter ./apps/admin run dev\"",
    "build:production": "concurrently -n host,admin \"pnpm --filter ./apps/host run build\" \"pnpm --filter ./apps/admin run build\"",
    "start": "concurrently -n host,admin \"pnpm --filter ./apps/host run start\" \"pnpm --filter ./apps/admin run start\"",
    "format": "prettier --write src",
    "lint": "pnpm -r --workspace-concurrency=1 run lint",
    "test": "jest"
  },
  "dependencies": {
    "framer-motion": "^11.5.4",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.53.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@it-incubator/eslint-config": "^1.0.3",
    "@it-incubator/prettier-config": "^0.1.2",
    "@it-incubator/stylelint-config": "^2.0.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.16.3",
    "@types/react": "^18",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "concurrently": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-testing-library": "^6.4.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fixed-jsdom": "^0.0.9",
    "stylelint": "^16.9.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
